<%= form_tag("/users/#{@user.id}/update", method: :post, multipart: true) do %>
	<h2>メンバー情報を編集</h2>
	<div id="box-newuser">
		<div id="box-newuser1">
			<h3>必須項目</h3>
				<div class="form-newuser">				
					<h4>名前</h4>
					<input id="name" name="name" size="15" type="text" value="<%= @user.name %>">
				</div>
				<div class="form-newuser">								
					<h4>ニックネーム（表示名）</h4>
					<input id="nickname" name="nickname" size="15" type="text" value="<%= @user.nickname %>">
				</div>
				<div class="form-newuser">				
					<h4>メールアドレス</h4>
					<input name="email" size="15" type="email" value="<%= @user.email %>">
				</div>
				<div class="form-newuser">				
					<h4>パスワード</h4>
					<input name="password" size="15" type="password" value="<%= @user.password %>">
				</div>
		</div>
		<div id="box-newuser2">
			<h3>任意項目</h3>
				<div class="form-newuser">
					<h4>プロフィール画像</h4>
					<input name="image" type="file">
				</div>
				<div class="form-newuser">
					<h4>自己紹介など</h4>
					<textarea name="memo" rows="3" value="<%= @user.memo %>"></textarea>
				</div>
		</div>
	</div>
	<input type="submit" name="commit" value="変更保存" class="btn btn-primary ">
<% end %>
