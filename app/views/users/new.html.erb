<%= form_tag('/users/create', method: :post, multipart: true) do %>
	<div id="box-newuser">
		<div id="box-newuser1">
			<h3>必須項目</h3>
				<div class="form-newuser">				
					<h4>名前</h4>
					<input id="name" name="name" size="15" type="text" value="<%= @user.name %>">
				</div>
				<div class="form-newuser">								
					<h4>ニックネーム（表示名）</h4>
					<input id="nickname" name="nickname" size="15" type="text" value="<%= @user.nickname %>">
				</div>
				<div class="form-newuser">
					<h4>メールアドレス</h4>
					<input name="email" size="15" type="email" value="<%= @user.email %>">
				</div>
				<div class="form-newuser">
					<h4>パスワード</h4>
					<input name="password" size="15" type="password">
				</div>
		</div>
		<div id="box-newuser2">
			<h3>任意項目</h3>
				<div class="form-newuser">
					<p>プロフィール画像</p>
					<input name="image" type="file">
				</div>
				<div class="form-newuser">
					<p>自己紹介など</p>
					<textarea name="memo" rows="3" value="<%= @user.memo %>"></textarea>
				</div>
		</div>
	</div>		
	<input type="submit" name="commit" value="メンバー登録" class="btn btn-primary ">					
<% end %>
