<div id="user-show">

	<img src="<%="/user_images/#{@user.image_name}"%>" id="showprofile-image">

	<div id="showprofile-content">
		<h4>登録名</h4>
			<%= @user.name %>
		<h4>表示名</h4>
			<%= @user.nickname %>
		<h4>連絡先</h4>
			<% if @user.email.include?("@") %>
				<%= @user.email %>
			<% else %>
				<%= "登録なし" %>
			<% end %>
		<h4>詳細</h4>
		<div id="usershow-memo">
			<%= @user.memo %>
		</div>
		<% if @user.id == @current_user.id %>
			<div class="button-edit">
				<%= button_to "編集", "/users/#{@user.id}/edit", class: "btn btn-primary", method: :get %>
			</div>
			<div class="button-del">
				<%= button_to "削除", "/users/#{@user.id}/delete", class: "btn btn-primary", method: :delete %>
			</div>	
		<% end %>
	</div>
</div>